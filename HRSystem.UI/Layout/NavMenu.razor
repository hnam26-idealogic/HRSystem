@inject HRSystem.UI.Services.AuthService AuthService
@inject HRSystem.UI.Services.UserService UserService

@code {
    private bool collapseNavMenu = true;
    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;
    private HRSystem.UI.DTOs.UserDto currentUser;
    private bool isAuthenticated;
    private string userType;

    protected override async Task OnInitializedAsync()
    {
        var userId = await AuthService.GetCurrentUserIdAsync();
        isAuthenticated = userId.HasValue && userId.Value != Guid.Empty;
        if (isAuthenticated)
        {
            currentUser = await UserService.GetByIdAsync(userId.Value);
            userType = currentUser?.UserType;
        }
    }

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">HRSystem.UI</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="ToggleNavMenu">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        @if (!isAuthenticated)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="authentication/login">
                    <span class="bi bi-box-arrow-in-right-nav-menu" aria-hidden="true"></span> Login
                </NavLink>
            </div>
        }
        <AuthorizeView Roles="HR, Interviewer">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="candidates">
                    <span class="bi bi-people-fill" aria-hidden="true"></span> Candidates
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="interviewers">
                    <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Interviewers
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView Roles="HR,Interviewer">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="interviews">
                    <span class="bi bi-people-fill-nav-menu" aria-hidden="true"></span> Interviews
                </NavLink>
            </div>
        </AuthorizeView>
        <AuthorizeView>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="profile">
                    <span class="bi bi-person-circle" aria-hidden="true"></span> Profile
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="logout">
                    <span class="bi bi-box-arrow-right" aria-hidden="true"></span> Logout
                </NavLink>
            </div>
        </AuthorizeView>
    </nav>
</div>
