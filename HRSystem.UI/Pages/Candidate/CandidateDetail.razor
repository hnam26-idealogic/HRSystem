@page "/candidates/{Id:guid}"
@inject ICandidateService CandidateService
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Candidate Details</h3>
                </div>
                <div class="card-body">
                    @if (candidate == null)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status"></div>
                            <span class="ms-2">Loading...</span>
                        </div>
                    }
                    else
                    {
                        <dl class="row">
                            <dt class="col-sm-4">Full Name</dt>
                            <dd class="col-sm-8">@candidate.Fullname</dd>
                            <dt class="col-sm-4">Email</dt>
                            <dd class="col-sm-8">@candidate.Email</dd>
                            <dt class="col-sm-4">Phone</dt>
                            <dd class="col-sm-8">@candidate.Phone</dd>
                            <dt class="col-sm-4">Resume</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(resumeUrl))
                                {
                                    <a class="btn btn-outline-primary btn-sm me-1" href="@resumeUrl" target="_blank">
                                        <i class="bi bi-eye"></i> View Resume
                                    </a>
                                    <a class="btn btn-outline-success btn-sm" href="@resumeUrl" download>
                                        <i class="bi bi-download"></i> Download Resume
                                    </a>
                                }
                                else
                                {
                                    <span class="text-muted">No resume uploaded</span>
                                }
                            </dd>
                        </dl>
                        <button class="btn btn-secondary mt-3" @onclick="NavigateBack">Back</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Guid Id { get; set; }
    private HRSystem.UI.DTOs.CandidateDto candidate;
    private string resumeUrl;

    protected override async Task OnInitializedAsync()
    {
        candidate = await CandidateService.GetByIdAsync(Id);
        if (!string.IsNullOrEmpty(candidate.ResumePath))
        {
            resumeUrl = await CandidateService.GetResumeUrlAsync(Id);
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/candidates");
    }
}