@page "/candidates/edit/{Id:guid}"
@using Microsoft.AspNetCore.Components
@inject ICandidateService CandidateService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <button class="btn btn-outline-secondary me-3" @onclick="NavigateBack">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
                <h2 class="mb-0">Edit Candidate</h2>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    @if (isLoading)
                    {
                        <div class="text-center py-5">
                            <div class="spinner-border text-primary" role="status"></div>
                            <p class="mt-2 text-muted">Loading candidate details...</p>
                        </div>
                    }
                    else if (editCandidateModel == null)
                    {
                        <div class="alert alert-warning">
                            Candidate not found.
                        </div>
                    }
                    else
                    {
                        <EditForm Model="@editCandidateModel" OnValidSubmit="HandleEditCandidate">
                            <DataAnnotationsValidator />
                            
                            <div class="row g-3">
                                <div class="col-12">
                                    <h5 class="text-muted mb-3 text-uppercase small fw-bold">Personal Information</h5>
                                </div>

                                <div class="col-md-12">
                                    <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                    <InputText class="form-control" @bind-Value="editCandidateModel.Fullname" placeholder="e.g. John Doe" />
                                    <ValidationMessage For="@(() => editCandidateModel.Fullname)" />
                                </div>

                                <div class="col-md-12">
                                    <label class="form-label">Phone Number</label>
                                    <InputText class="form-control" @bind-Value="editCandidateModel.Phone" placeholder="e.g. +1 234 567 890" />
                                    <ValidationMessage For="@(() => editCandidateModel.Phone)" />
                                </div>

                                <div class="col-12 mt-4">
                                    <h5 class="text-muted mb-3 text-uppercase small fw-bold">Documents</h5>
                                </div>

                                <div class="col-12">
                                    <label class="form-label">Resume (PDF)</label>
                                    
                                    @if (!string.IsNullOrEmpty(currentResumeUrl))
                                    {
                                        <div class="alert alert-light border d-flex align-items-center mb-3">
                                            <i class="bi bi-file-earmark-pdf text-danger fs-4 me-3"></i>
                                            <div class="flex-grow-1">
                                                <div class="fw-bold">Current Resume</div>
                                                <small class="text-muted">Uploaded previously</small>
                                            </div>
                                            <a href="@currentResumeUrl" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye me-1"></i> View
                                            </a>
                                        </div>
                                    }

                                    <div class="input-group">
                                        <InputFile class="form-control" OnChange="HandleEditFileChange" accept="application/pdf" />
                                        <span class="input-group-text"><i class="bi bi-upload"></i></span>
                                    </div>
                                    <div class="form-text">Upload a new file to replace the current resume. Max 5MB.</div>
                                    @if (!string.IsNullOrEmpty(fileErrorMessage))
                                    {
                                        <div class="text-danger small mt-1">@fileErrorMessage</div>
                                    }
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(errorMessage))
                            {
                                <div class="alert alert-danger mt-4 d-flex align-items-center">
                                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                    <div>@errorMessage</div>
                                </div>
                            }

                            <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                                <button type="button" class="btn btn-light" @onclick="NavigateBack">Cancel</button>
                                <button type="submit" class="btn btn-primary px-4" disabled="@isSubmitting">
                                    @if (isSubmitting)
                                    {
                                        <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                        <span>Saving...</span>
                                    }
                                    else
                                    {
                                        <i class="bi bi-check-lg me-2"></i>
                                        <span>Save Changes</span>
                                    }
                                </button>
                            </div>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Guid Id { get; set; }
    private HRSystem.UI.DTOs.UpdateCandidateRequestDto editCandidateModel;
    private IBrowserFile editResumeFile;
    private string errorMessage;
    private string fileErrorMessage;
    private string currentResumeUrl;
    private bool isLoading = true;
    private bool isSubmitting = false;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isLoading = true;
            var candidate = await CandidateService.GetByIdAsync(Id);
            if (candidate != null)
            {
                editCandidateModel = new HRSystem.UI.DTOs.UpdateCandidateRequestDto
                {
                    Fullname = candidate.Fullname,
                    Phone = candidate.Phone
                };
                
                if (!string.IsNullOrEmpty(candidate.ResumePath))
                {
                    currentResumeUrl = await CandidateService.GetResumeUrlAsync(Id);
                }
            }
        }
        catch (Exception ex)
        {
            errorMessage = "Error loading candidate details.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleEditFileChange(InputFileChangeEventArgs e)
    {
        var file = e.File;
        fileErrorMessage = string.Empty;
        
        if (file != null)
        {
            if (file.Size > 5 * 1024 * 1024)
            {
                fileErrorMessage = "File size exceeds the 5MB limit.";
                editResumeFile = null;
                return;
            }

            if (file.ContentType != "application/pdf")
            {
                fileErrorMessage = "Only PDF files are allowed.";
                editResumeFile = null;
                return;
            }
            editResumeFile = file;
        }
    }

    private async Task HandleEditCandidate()
    {
        if (isSubmitting) return;
        
        try
        {
            isSubmitting = true;
            errorMessage = string.Empty;
            
            var success = await CandidateService.UpdateAsync(Id, editCandidateModel, editResumeFile);
            if (success)
            {
                Navigation.NavigateTo("/candidates");
            }
            else
            {
                errorMessage = "Failed to update candidate. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/candidates");
    }
}