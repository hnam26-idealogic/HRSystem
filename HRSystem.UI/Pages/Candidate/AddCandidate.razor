@page "/candidates/add"
@inject ICandidateService CandidateService
@inject NavigationManager Navigation

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="d-flex align-items-center mb-4">
                <button class="btn btn-outline-secondary me-3" @onclick="NavigateBack">
                    <i class="bi bi-arrow-left"></i> Back
                </button>
                <h2 class="mb-0">Add New Candidate</h2>
            </div>

            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <EditForm Model="@addCandidateModel" OnValidSubmit="HandleAddCandidate">
                        <DataAnnotationsValidator />
                        
                        <div class="row g-3">
                            <div class="col-12">
                                <h5 class="text-muted mb-3 text-uppercase small fw-bold">Personal Information</h5>
                            </div>
                            
                            <div class="col-md-12">
                                <label class="form-label">Full Name <span class="text-danger">*</span></label>
                                <InputText class="form-control" @bind-Value="addCandidateModel.Fullname" placeholder="e.g. John Doe" />
                                <ValidationMessage For="@(() => addCandidateModel.Fullname)" />
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Email Address <span class="text-danger">*</span></label>
                                <InputText class="form-control" @bind-Value="addCandidateModel.Email" placeholder="e.g. john@example.com" />
                                <ValidationMessage For="@(() => addCandidateModel.Email)" />
                            </div>
                            
                            <div class="col-md-6">
                                <label class="form-label">Phone Number</label>
                                <InputText class="form-control" @bind-Value="addCandidateModel.Phone" placeholder="e.g. +1 234 567 890" />
                                <ValidationMessage For="@(() => addCandidateModel.Phone)" />
                            </div>

                            <div class="col-12 mt-4">
                                <h5 class="text-muted mb-3 text-uppercase small fw-bold">Documents</h5>
                            </div>

                            <div class="col-12">
                                <label class="form-label">Resume (PDF) <span class="text-danger">*</span></label>
                                <div class="input-group">
                                    <InputFile class="form-control" OnChange="HandleFileChange" accept="application/pdf" />
                                    <span class="input-group-text"><i class="bi bi-file-earmark-pdf"></i></span>
                                </div>
                                @if (!string.IsNullOrEmpty(fileErrorMessage))
                                {
                                    <div class="text-danger small mt-1">@fileErrorMessage</div>
                                }
                                <div class="form-text">Max file size: 5MB. Only PDF files are allowed.</div>
                            </div>
                        </div>

                        @if (!string.IsNullOrEmpty(errorMessage))
                        {
                            <div class="alert alert-danger mt-4 d-flex align-items-center">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                <div>@errorMessage</div>
                            </div>
                        }

                        <div class="d-flex justify-content-end gap-2 mt-4 pt-3 border-top">
                            <button type="button" class="btn btn-light" @onclick="NavigateBack">Cancel</button>
                            <button type="submit" class="btn btn-primary px-4" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status" aria-hidden="true"></span>
                                    <span>Saving...</span>
                                }
                                else
                                {
                                    <i class="bi bi-check-lg me-2"></i>
                                    <span>Save Candidate</span>
                                }
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private HRSystem.UI.DTOs.AddCandidateRequestDto addCandidateModel = new();
    private IBrowserFile addResumeFile;
    private string errorMessage;
    private string fileErrorMessage;
    private bool isSubmitting = false;

    private void HandleFileChange(InputFileChangeEventArgs e)
    {
        var file = e.File;
        fileErrorMessage = string.Empty;
        if (file == null)
        {
            fileErrorMessage = "Please select a file.";
            addResumeFile = null;
            return;
        }
        
        // Check file size (e.g., 5MB limit)
        if (file.Size > 5 * 1024 * 1024)
        {
            fileErrorMessage = "File size exceeds the 5MB limit.";
            addResumeFile = null;
            return;
        }

        if (file.ContentType != "application/pdf")
        {
            fileErrorMessage = "Only PDF files are allowed.";
            addResumeFile = null;
            return;
        }
        addResumeFile = file;
    }

    private async Task HandleAddCandidate()
    {
        if (isSubmitting) return;

        errorMessage = string.Empty;
        if (addResumeFile == null)
        {
            fileErrorMessage = "Please select a valid PDF file.";
            return;
        }

        try
        {
            isSubmitting = true;
            var success = await CandidateService.AddAsync(addCandidateModel, addResumeFile);
            if (success)
            {
                Navigation.NavigateTo("/candidates");
            }
            else
            {
                errorMessage = "Failed to add candidate. Please try again.";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/candidates");
    }
}