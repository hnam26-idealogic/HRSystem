@page "/interviewers/add"
@inject HRSystem.UI.Services.UserService UserService
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0">Add Interviewer</h3>
                </div>
                <div class="card-body">
                    <EditForm Model="@addInterviewerModel" OnValidSubmit="HandleAddInterviewer">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <InputText id="username" class="form-control" @bind-Value="addInterviewerModel.Username" placeholder="Username" />
                        </div>
                        <div class="mb-3">
                            <label for="fullname" class="form-label">Full Name</label>
                            <InputText id="fullname" class="form-control" @bind-Value="addInterviewerModel.Fullname" placeholder="Full Name" />
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <InputText id="email" class="form-control" @bind-Value="addInterviewerModel.Email" placeholder="Email" />
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="addInterviewerModel.Password" placeholder="Password" />
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <InputText id="phone" class="form-control" @bind-Value="addInterviewerModel.PhoneNumber" placeholder="Phone Number" />
                        </div>
                        <div class="mb-3">
                            <label for="specialty" class="form-label">Specialty</label>
                            <InputText id="specialty" class="form-control" @bind-Value="addInterviewerModel.Specialty" placeholder="Specialty" />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Add</button>
                        <button type="button" class="btn btn-secondary w-100 mt-2" @onclick="NavigateBack">Cancel</button>
                    </EditForm>
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger mt-3">@errorMessage</div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private HRSystem.UI.DTOs.AddUserRequestDto addInterviewerModel = new() { UserType = "Interviewer" };
    private string errorMessage;

    private async Task HandleAddInterviewer()
    {
        var success = await UserService.AddAsync(addInterviewerModel);
        if (success)
        {
            Navigation.NavigateTo("/interviewers");
        }
        else
        {
            errorMessage = "Failed to add interviewer.";
        }
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/interviewers");
    }
}