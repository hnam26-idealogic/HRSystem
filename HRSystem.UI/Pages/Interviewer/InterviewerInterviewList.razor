@page "/interviewer-interviews"
@using HRSystem.UI.DTOs
@inject HRSystem.UI.Services.InterviewService InterviewService
@inject HRSystem.UI.Services.UserService UserService
@inject NavigationManager Navigation

<h3>Interviews Assigned to Interviewer</h3>
<div class="mb-3">
    <input type="text" class="form-control" placeholder="Search interviewer by email or name..." @bind="searchInterviewer" />
    <button class="btn btn-primary mt-2" @onclick="SearchInterviewer">Search</button>
</div>
@if (selectedInterviewer != null)
{
    <div class="mb-3">
        <strong>Selected Interviewer:</strong> @selectedInterviewer.Fullname (@selectedInterviewer.Email)
    </div>
}
@if (interviews == null)
{
    <div>Loading interviews...</div>
}
else if (interviews.Count == 0)
{
    <div>No interviews found for this interviewer.</div>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Candidate</th>
                <th>Date</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var interview in interviews)
            {
                <tr>
                    <td>@interview.CandidateName</td>
                    <td>@interview.InterviewedAt.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@interview.Status</td>
                    <td>
                        <button class="btn btn-info btn-sm me-2" @onclick="() => NavigateToDetail(interview.Id)">View</button>
                        <button class="btn btn-warning btn-sm me-2" @onclick="() => NavigateToEdit(interview.Id)">Edit</button>
                        <button class="btn btn-success btn-sm" @onclick="() => NavigateToResult(interview.Id)">Enter Result</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private string searchInterviewer = "";
    private UserDto selectedInterviewer;
    private List<InterviewDto> interviews;

    protected override async Task OnInitializedAsync()
    {
        // Optionally load default interviewer or interviews
    }

    private async Task SearchInterviewer()
    {
        var users = await UserService.GetAllAsync();
        selectedInterviewer = users.FirstOrDefault(u => u.Email.Contains(searchInterviewer, StringComparison.OrdinalIgnoreCase) || u.Fullname.Contains(searchInterviewer, StringComparison.OrdinalIgnoreCase));
        if (selectedInterviewer != null)
        {
            await LoadInterviewsForInterviewer(selectedInterviewer.Id);
        }
        else
        {
            interviews = new List<InterviewDto>();
        }
    }

    private async Task LoadInterviewsForInterviewer(Guid interviewerId)
    {
        var allInterviews = await InterviewService.GetAllAsync();
        interviews = allInterviews.Where(i => i.InterviewerId == interviewerId).ToList();
    }

    private void NavigateToDetail(Guid interviewId)
    {
        Navigation.NavigateTo($"/interview/{interviewId}");
    }
    private void NavigateToEdit(Guid interviewId)
    {
        Navigation.NavigateTo($"/edit-interview/{interviewId}");
    }
    private void NavigateToResult(Guid interviewId)
    {
        Navigation.NavigateTo($"/interview-result/{interviewId}");
    }
}
