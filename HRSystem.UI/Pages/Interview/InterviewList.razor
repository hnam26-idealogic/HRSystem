@page "/interviews"
@using HRSystem.UI.DTOs
@inject HRSystem.UI.Services.InterviewService InterviewService
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Interviews</h3>
        <div class="d-flex">
            <input class="form-control me-2" style="width: 250px;" placeholder="Search candidate/interviewer" @bind="searchQuery" @bind:event="oninput" />
            <button class="btn btn-primary me-2" @onclick="SearchInterviews">
                <i class="bi bi-search"></i> Search
            </button>
            <button class="btn btn-success" @onclick="NavigateToAdd">
                <i class="bi bi-calendar-plus"></i> Add Interview
            </button>
        </div>
    </div>
    @if (interviews == null)
    {
        <div class="text-center">
            <div class="spinner-border text-primary" role="status"></div>
            <span class="ms-2">Loading...</span>
        </div>
    }
    else
    {
        <table class="table table-striped table-hover shadow">
            <thead class="table-dark">
                <tr>
                    <th>Candidate</th>
                    <th>Interviewer</th>
                    <th>Date</th>
                    <th>Status</th>
                    <th>Recording</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var interview in interviews)
                {
                    <tr>
                        <td>@interview.CandidateName</td>
                        <td>@interview.InterviewerName</td>
                        <td>@interview.InterviewedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@interview.Status</td>
                        <td>
                            @if (!string.IsNullOrEmpty(interview.Recording))
                            {
                                <a class="btn btn-outline-primary btn-sm" href="@interview.Recording" target="_blank" download>
                                    <i class="bi bi-download"></i> Download
                                </a>
                                <audio controls class="mt-2" src="@interview.Recording" style="max-width:120px;"></audio>
                            }
                            else
                            {
                                <span class="text-muted">No recording</span>
                            }
                        </td>
                        <td>
                            <button class="btn btn-info btn-sm me-2" @onclick="() => NavigateToDetail(interview.Id)">
                                <i class="bi bi-eye"></i> View
                            </button>
                            <button class="btn btn-warning btn-sm me-2" @onclick="() => NavigateToEdit(interview.Id)">
                                <i class="bi bi-pencil-square"></i> Edit
                            </button>
                            <button class="btn btn-danger btn-sm" @onclick="() => HandleDeleteInterview(interview.Id)">
                                <i class="bi bi-trash"></i> Delete
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert alert-danger mt-3">@errorMessage</div>
        }
    }
</div>

@code {
    private List<InterviewDto> interviews;
    private string errorMessage;
    private string searchQuery = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadInterviews();
    }

    private async Task LoadInterviews()
    {
        interviews = await InterviewService.GetAllAsync();
    }

    private async Task SearchInterviews()
    {
        if (string.IsNullOrWhiteSpace(searchQuery))
        {
            await LoadInterviews();
        }
        else
        {
            interviews = await InterviewService.SearchAsync(searchQuery);
        }
    }

    private void NavigateToAdd()
    {
        Navigation.NavigateTo("/interviews/add");
    }

    private void NavigateToEdit(Guid id)
    {
        Navigation.NavigateTo($"/interviews/edit/{id}");
    }

    private void NavigateToDetail(Guid id)
    {
        Navigation.NavigateTo($"/interviews/{id}");
    }

    private async Task HandleDeleteInterview(Guid id)
    {
        var success = await InterviewService.DeleteAsync(id);
        if (success)
        {
            await LoadInterviews();
        }
        else
        {
            errorMessage = "Failed to delete interview.";
        }
    }
}
