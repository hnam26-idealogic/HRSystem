@page "/interviews/{Id:guid}"
@using HRSystem.UI.DTOs
@inject IInterviewService InterviewService
@inject NavigationManager Navigation

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-info text-white">
                    <h3 class="mb-0">Interview Details</h3>
                </div>
                <div class="card-body">
                    @if (interview == null)
                    {
                        <div class="text-center">
                            <div class="spinner-border text-primary" role="status"></div>
                            <span class="ms-2">Loading...</span>
                        </div>
                    }
                    else
                    {
                        <dl class="row">
                            <dt class="col-sm-4">Candidate</dt>
                            <dd class="col-sm-8">@interview.CandidateName</dd>
                            <dt class="col-sm-4">Interviewer</dt>
                                <dd class="col-sm-8">@interview.InterviewerEmail</dd>
                            <dt class="col-sm-4">HR</dt>
                                <dd class="col-sm-8">@interview.HrEmail</dd>
                            <dt class="col-sm-4">Job</dt>
                            <dd class="col-sm-8">@interview.Job</dd>
                            <dt class="col-sm-4">Interviewed At</dt>
                            <dd class="col-sm-8">@interview.InterviewedAt.ToString("yyyy-MM-dd HH:mm")</dd>
                            <dt class="col-sm-4">English Score</dt>
                            <dd class="col-sm-8">@interview.English</dd>
                            <dt class="col-sm-4">Technical Score</dt>
                            <dd class="col-sm-8">@interview.Technical</dd>
                            <dt class="col-sm-4">Recommend Score</dt>
                            <dd class="col-sm-8">@interview.Recommend</dd>
                            <dt class="col-sm-4">Status</dt>
                            <dd class="col-sm-8">@interview.Status</dd>
                            <dt class="col-sm-4">Recording</dt>
                            <dd class="col-sm-8">
                                @if (!string.IsNullOrEmpty(interview.Recording))
                                {
                                    <a class="btn btn-outline-primary btn-sm" href="@interview.Recording" target="_blank" download>
                                        <i class="bi bi-download"></i> Download Recording
                                    </a>
                                    <audio controls class="mt-2" src="@interview.Recording"></audio>
                                }
                                else
                                {
                                    <span class="text-muted">No recording available.</span>
                                }
                            </dd>
                        </dl>
                        <button class="btn btn-secondary mt-3" @onclick="NavigateBack">Back</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public Guid Id { get; set; }
    private InterviewDto interview;

    protected override async Task OnInitializedAsync()
    {
        interview = await InterviewService.GetByIdAsync(Id);
    }

    private void NavigateBack()
    {
        Navigation.NavigateTo("/interviews");
    }
}
